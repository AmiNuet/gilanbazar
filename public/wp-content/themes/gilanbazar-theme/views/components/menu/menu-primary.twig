{% if menu %}
	<ul class="nav-main--items-mobile">
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}{{ item.children == 'true' ? ' dropdown has-megamenu' }}">
			<a target="{{ item.target }}" href="{{ item.link }}" title="{{ item.title }}"{% if item.children == 'true' %} id="menuDropdown-{{ item.id }}" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside"{% endif %}>
				{{ item.title }}
				{% if item.children or industriesItems == 'true' %}
					{{ fetch_svg('chevron-down') }}
				{% endif %}
			</a>
            {% if item.children or industriesItems == 'true' %}
                {% include "components/menu/menu-mega.twig" with {'items': item.children} %}
            {% endif %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
