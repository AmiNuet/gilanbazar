<div class="top-menu">
    <div class="container">
        <div class="row">
            <div class="col-12 text-end">
                <div class="header__container">
                    {% if exp_mobile() %}
                        <a class="navbar-brand d-flex flex-grow-2" href="{{ site.url }}" title="{{ site.name }}">
                            {% if options.header_logo is not empty %}
                                <img src="{{ options.header_logo.url }}" alt="{{ site.name }}" class="header__logo" />
                            {% else %}
                                <h1>{{ site.name }}</h1>
                            {% endif %}
                        </a>
                    {% else %}
                        <ul class="top-menu__list">
                            <li>
                                {{ fetch_svg('globe') }}

                                {% if is_front_page %}
                                    {{ __('پلتفرم جامع خرید به واسطه محصولات گیلان', 'expedition') }}
                                {% else %}
                                    <a href="/" title="{{ __('خانه گیلان بازار', 'expedition') }}">{{ __('خانه گیلان بازار', 'expedition') }}</a>
                                {% endif %}
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>