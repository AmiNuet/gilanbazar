{% extends 'base.twig' %}

{% block content %}
    {% do action('woocommerce_before_main_content') %}
    <div class="archive-product container mt-4 mb-10">
        <div class="row">
            <div class="col-12">
                <div class="archive-product__header">
                    {% do action('woocommerce_before_shop_loop') %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                {% do action('woocommerce_sidebar') %}
            </div>
            <div class="col-md-9">
                <div class="archive-product__products-container">
                    {% for post in products %}
                        {% include ["partial/tease-product.twig"] %}
                    {% endfor %}
                </div>
                {% do action('woocommerce_after_shop_loop') %}
                {% do action('woocommerce_after_main_content') %}
            </div>
        </div>
    </div>
{% endblock %}
